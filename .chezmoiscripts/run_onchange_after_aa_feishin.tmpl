{{ if .laptop -}}
#!/usr/bin/env bash
AA_PROFILE_PATH="/etc/apparmor.d/feishin"
AA_PROFILE_CONTENT=$(cat << EOF
# Generated by chezmoi
#
# https://discourse.ubuntu.com/t/spec-unprivileged-user-namespace-restrictions-via-apparmor-in-ubuntu-23-10/37626/1
abi <abi/4.0>,
include <tunables/global>
profile feishin ${HOME}/.local/bin/feishin flags=(unconfined) {
  userns,
  include if exists <local/feishin>
}
EOF
)
if [ ! -z "${AA_PROFILE_PATH}" ]; then
  echo "* Apply custom AppArmor profile for Feishin"
  sudo tee "${AA_PROFILE_PATH}" >/dev/null <<< "${AA_PROFILE_CONTENT}"
  sudo systemctl restart apparmor.service
fi
{{ end -}}